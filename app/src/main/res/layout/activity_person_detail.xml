<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".person_detail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="person details"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_marginStart="100dp" />

    <ImageView
        android:id="@+id/personimg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/person1"
        android:layout_marginStart="100dp"
        android:layout_marginTop="80dp"
        android:contentDescription="person_detail"/>
    <LinearLayout
        android:id="@+id/namelinearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personimg"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/person2"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name :"
            android:textStyle="bold"
            android:textSize="30sp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="10dp"
            style="@style/MaterialAlertDialog.Material3.Title.Text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:text="kailash sahu"
            android:textStyle="bold"
            android:textSize="30sp"
            android:paddingBottom="10dp"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/mobnolinearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/namelinearlayout"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/mobile"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mob :"
            android:textStyle="bold"
            android:textSize="30sp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="10dp"
            style="@style/MaterialAlertDialog.Material3.Title.Text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mobno"
            android:text="+9133568695"
            android:textStyle="bold"
            android:textSize="30sp"
            android:paddingBottom="10dp"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/maillinearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobnolinearlayout"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/age"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age :  "
            android:textStyle="bold"
            android:textSize="30sp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="10dp"
            style="@style/MaterialAlertDialog.Material3.Title.Text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/age"
            android:text="22"
            android:textStyle="bold"
            android:textSize="30sp"
            android:paddingBottom="10dp"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/balancelinearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maillinearlayout"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/bankbalance"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance :"
            android:textStyle="bold"
            android:textSize="30sp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="10dp"
            style="@style/MaterialAlertDialog.Material3.Title.Text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/balance"
            android:text="10000"
            android:textStyle="bold"
            android:textSize="30sp"
            android:paddingBottom="10dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/balancelinearlayout"
        android:layout_marginTop="15dp"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transfer"
            android:id="@+id/transfer"
            />

    </LinearLayout>

</RelativeLayout>